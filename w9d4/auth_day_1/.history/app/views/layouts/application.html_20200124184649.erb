<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
    Hello <%= current_user.username %>!
    <%= button_to("Logout!", destroy_session_url, method: :destroy) %>
    <% else %>
    <%= button_to("Log in!", new_session_url, method: :get) unless name == new_session_url%>
    <% end %>
    <%= yield %>
  </body>
</html>
