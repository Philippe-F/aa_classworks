
<% if action == :edit %>
    <% action_url = cat_url(cat.id) %>
<% else %>
    <% action_url = cats_url %>
<% end %>

<form action="<%= action_url %>" method="post">

    <% if action_url == :edit %>
        <input type="hidden" name="_method" value="patch">
    <% end %>

    <label>
        Name
        <input type="text" name="cat[name]" value="<%= cat.name %>"> 
    </label>
<br>
<br>
    <label for="cat_color">Color</label>
    <select name="cat[color]" id="cat_color">
        <option disabled selected>-- Select Color --</option>
        <% Cat::COLORS.each do |color|  %>
        <option <%= cat.color == color ? "selected" : "" %>>
        <%= color %>
        </option>   
        <% end %>
    </select>
<br>
<br>
<label> 
    Sex
    <input type="radio" name="cat[sex]" value="M"
    <%= cat.sex == "M" ? value = "checked" : "" %>> Male

    <input type="radio" name="cat[sex]" value="F"
    <%= cat.sex == "F" ? checked = "checked" : "" %>> Female 
</label>
<br>
<br>
<label>
    Birth Date
    <input type="date" name="cat[birth_date]" value="<%= cat.birth_date %>"> 
</label>
<br>
<br>
<label>
    Description
    <textarea name="cat[description]">
        <%= cat.description %>
    </textarea> 
</label>

  <input type="submit" value="<%= (action == :edit) ? "Update Cat" : "Add Cat" %>">
</form> 